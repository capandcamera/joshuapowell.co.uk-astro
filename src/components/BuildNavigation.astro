---
import '../sass/styles.scss'
const currentPage = Astro.url.pathname;
---
{
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"> Joshua Powell Photography </a>
      <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <i class="navbar-toggler-btn fa fa-bars" aria-hidden="true"></i>
      </button>
      <div class="navbar-collapse collapse justify-content-end" id="navbarContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class={currentPage === '/' ? 'nav-link active' : 'nav-link'} href="/"> Home </a>
          </li>
          <li class="nav-item">
            <a class={currentPage === '/gallery' || currentPage === '/gallery/' ? 'nav-link active' : 'nav-link'}  href="/gallery">Gallery</a>
          </li>
          <li class="nav-item">
            <a class={currentPage.startsWith('/contact') ? 'nav-link active' : 'nav-link'} href="/contact">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
}